<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/SoftPink"
                                             tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SoftBlue"
            android:text="@string/manga_and_comics_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:fontFamily="sans-serif-black" android:textSize="36sp"
            app:layout_constraintVertical_bias="0.100000024" android:id="@+id/textView"/>

    <Button
            android:text="@string/toast"
            android:background="@color/SoftYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_toast"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="toastMe"/>
    <Button
            android:text="@string/count"
            android:background="@color/SoftOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_count"
            app:layout_constraintEnd_toStartOf="@+id/button_toast"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_toast"
            android:onClick="countMe"/>
    <Button
            android:text="@string/random"
            android:background="@color/SoftGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_random" app:layout_constraintStart_toEndOf="@+id/button_toast"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_toast"
            android:onClick="randomMe"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_toast" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="72sp"
            app:fontFamily="sans-serif"/>


</android.support.constraint.ConstraintLayout>